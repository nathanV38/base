  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

group :test, :development do
  gem 'rspec'
  gem 'database_cleaner'
  gem 'rspec-rails', '>= 2.5'
end

group :cucumber do
  gem 'capybara'
  gem 'database_cleaner'
  gem 'cucumber-rails'
  gem 'rspec'
  gem 'rspec-rails', '>= 2.5'
  gem 'cucumber'
  gem 'launchy'
end


